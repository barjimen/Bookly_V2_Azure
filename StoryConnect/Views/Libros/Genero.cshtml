@model Generos

<h1 class="mb-4">📖 Libros del género: @Model.Genero.Nombre</h1>

<div class="row mb-4">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Generos">Generos</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Html.DisplayFor(model => model.Genero.Nombre)</li>
            </ol>
        </nav>
    </div>
</div>
<div class="d-flex gap-3 pb-2" style="flex-wrap: wrap; justify-content: space-around">
    @foreach (var libro in Model.Libros)
    {
        <div class="text-center" style="min-width: 200px;">
            <a asp-action="Detalles" asp-controller="Libros" asp-route-id="@libro.Id">
                <img src="@libro.ImagenPortada"
                     alt="@libro.Titulo"
                     class="img-fluid rounded shadow-sm mb-2"
                     style="height: 200px; object-fit: cover;" />
            </a>
        </div>
    }
</div>
<hr />
